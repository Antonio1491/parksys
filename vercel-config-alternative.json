{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/**",
          "public/**",
          "uploads/**"
        ]
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/images/(.*)",
      "dest": "/api/server"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/api/server"
    },
    {
      "src": "/fonts/(.*)",
      "dest": "/api/server"
    },
    {
      "src": "/locales/(.*)",
      "dest": "/api/server"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/server"
    },
    {
      "src": "/(.*\\.(png|jpg|jpeg|gif|webp|svg|ico|ttf|otf|woff|woff2))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/server.ts": {
      "runtime": "nodejs18.x"
    }
  }
}